datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id            String        @id @default(uuid())
  title         String
  parent_id     String
  subCategories SubCategory[] @relation("Sub Category")
}

model SubCategory {
  id        String   @id @default(uuid())
  title     String
  parent_id String
  category  Category @relation("Sub Category", fields: [parent_id], references: [id])
}
